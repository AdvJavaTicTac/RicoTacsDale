<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Screen" />


    <TableLayout
        android:id="@+id/playBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ACC7FD"
        android:layout_margin="30dp">


        <TableRow
            android:id="@+id/row0"
            android:layout_width="match_parent">


            <Button
                android:id="@+id/r0c0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty"/>

            <Button
                android:id="@+id/r0c1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty"/>


            <Button
                android:id="@+id/r0c2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty"/>


        </TableRow>

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/r1c0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty" />

            <Button
                android:id="@+id/r1c1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty" />

            <Button
                android:id="@+id/r1c2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty"/>
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/r2c0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty" />
            <Button
                android:id="@+id/r2c1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty" />
            <Button
                android:id="@+id/r2c2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="Empty" />
        </TableRow>

    </TableLayout>

</LinearLayout>